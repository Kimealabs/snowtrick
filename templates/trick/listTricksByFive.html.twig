{% for trick in tricks %}
	<div class="card col-12 col-xl-2 col-lg-3 col-sm-5 col-md-3 col-xs-12" onclick="document.location='{{ path('app_trick', {'slug': trick.slug })}}'">
		<div class="card-img" style="background-image: url('assets/tricks/{{ trick.images[0].name }}');"></div>
		<div class="card-body d-flex justify-content-center">
			<button href="#" class="fs-4 text-pink btn btn-light shadow">{{ trick.name }}</button>
		</div>
	</div>
{% endfor %}