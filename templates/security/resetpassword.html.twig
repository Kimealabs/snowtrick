{% extends './parts/base.html.twig' %}

{% block title %}Reset password
{% endblock %}

{% block body %}
	<div class="container rounded p-4 shadow-lg" style="margin-top:100px;max-width:1000px;min-height:70vh">


		{% if app.user %}
			<div class="mb-3">
				You are logged as
				<b>{{ app.user.userIdentifier }}</b>,
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% else %}
			<div class="row justify-content-center">
				<div class="col-12 col-md-6 mt-4">
					<h1 class="h3 mb-3 font-weight-normal text-center mb-5">FORGOT PASSWORD ?</h1>
					{{ form_start(form)}}
					{{ form_row(form.username)}}
					{{ form_row(form.password)}}
					<button type="submit" class="btn btn-dark btn-md">RESET</button><br>

					{{ form_end(form)}}<br>

					{% if message %}
						<div class="mt-5 alert alert-{{message.type}}">{{ message.label | raw }}</div>
					{% endif %}
				</div>
			</div>
		{% endif %}
	</div>
{% endblock %}
