{% extends 'base.html.twig' %}

{% block title %}Snowtricks
{% endblock %}

{% block body %}
	<div class="home d-flex flex-column justify-content-center align-items-center">
		<h1 class=" display-1 text-pink" style=" font-size:6em;">Snowtricks</h1>
		<h3 class="text-white">Parcourez et partagez les figures de snowboard</h3>
		<div class="arrow-link">
			<a href="#tricksList" class="text-reset">
				<i class="fa-solid fa-circle-down"></i>
			</a>
		</div>
	</div>

	<div class="container">
		<div class="col-12 d-flex gap-5 mt-4 pt-3 flex-wrap" id="tricksList" style="position:relative">
			{% for trick in tricks %}
				<div class="card col-12 col-xl-2 col-lg-3 col-sm-5 col-md-3 col-xs-12" onclick="document.location='trick'">
					<div class="card-img" style="background-image: url('assets/tricks/{{ trick.images[0].name }}');"></div>
					<div class="card-body d-flex justify-content-center">
						<button href="#" class="fs-4 text-pink btn btn-light shadow">{{ trick.name }}</button>
					</div>
				</div>
			{% endfor %}
		</div>

	</div>
	<div class="col-12" style="position:relative;height:200px">
		<div class="arrow-link">
			<a href="#start" class="">
				<i class="fa-solid fa-circle-up"></i>
			</a>
		</div>
	</div>

{% endblock %}
